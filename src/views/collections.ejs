<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/shop.css" type="text/css" />
        <link rel="stylesheet" href="/css/shop-tablet.css" type="text/css" />
        <link rel="stylesheet" href="/css/shop-desktop.css" type="text/css" />
        <%- include("./partials/head") %>
    </head>

    <body class="bg-lightgrey">
        <%- include("./partials/header") %>
        <section>
            <div class="bg-dark py-5">
                <div class="container px-4 px-lg-5 my-5">
                    <div class="text-center text-white">
                        <h1 class="display-4 fw-bolder">Live in style</h1>
                        <p class="lead fw-normal text-white-50 mb-0">
                            With our latest and best glasses
                        </p>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="pb-5 pt-rem">
            <div class="button-create">
                
                <% if(user != undefined && user.admin == 1){ %>
                <form action="/collections/create" method="GET">
                    <button type="submit" class="button-new-product">
                        Nuevo Producto
                    </button>
                </form>
                <% } %>
            </div>
            <div class="container px-4 px-lg-5 mt-5">
                
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% for(let product of products){ %>
                    <div class="col mb-5 ">
                        <div class="card h-100 border-section">
                            <img src="<%= product.imageProducts.image1 %>" class="card-img-top h-inherit"/>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder"><%= product.name %></h5>
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                    $ <%= product.price %>
                                </div>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="<%=`/collections/${product.id}` %>">View Details</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>    
            </div>
        </section>
        
        </main>
        <%- include("./partials/footer") %>
    </body>
</html>
