<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/products.css" type="text/css" />
        <link rel="stylesheet" href="/css/product-tablet.css" type="text/css" />

        <%- include("./partials/head") %>
    </head>
    <script src="/js/addToCart.js"></script>

    <body>
        <%- include("./partials/header") %>

        <main class="container">
            <hr />
            <p class="text-muted strong font-monospace">
                <a href="/" class="text-decoration-none text-reset">Home </a> >
                <a href="/collections" class="text-decoration-none text-reset"
                    >Shop
                </a>
                >
                <a
                    href="/search?search=<%= product.brand  %> "
                    class="text-decoration-none text-reset"
                    ><%= product.brand %>
                </a>
            </p>

            <div class="row py-3">
                <div class="pl-5 col-1 my-5 grid-images">
                    <img
                        src="<%= product.imageProducts.image1 %> "
                        class="d-block w-100"
                        alt="..."
                    />
                    <img
                        src="<%= product.imageProducts.image2 %> "
                        class="d-block w-100"
                        alt="..."
                    />
                    <img
                        src="<%= product.imageProducts.image3 %> "
                        class="d-block w-100"
                        alt="..."
                    />
                </div>
                <div class="col-6 grid-images">
                    <img
                        src="<%= product.imageProducts.image1 %> "
                        class="d-block w-100"
                        alt="..."
                    />
                </div>
                <div class="col-4">
                    <div class="border-white card h-100">
                        <div class="card-top">
                            <h6 class="text-muted text-shadow">
                                <%=product.brand %> - <%= product.type %>
                            </h6>
                            <h2 class="text-shadow"><%= product.name %></h2>
                            <p class="text-muted text-shadow">
                                <small>Item <%= product.id %> </small>
                            </p>
                            <div
                                class="d-flex justify-content-left small mb-2 text-shadow"
                            >
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <span
                                    class="px-2 ultra-small text-decoration-underline"
                                    >3 REVIEWS
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <h5 class="text-shadow pt-2 strong text-danger">
                                $<%= product.price %>
                            </h5>
                            <p class="text-muted text-shadow pt-2">Color:</p>
                            <div>
                                <% for(columnName in columnNamesBorder){ %> <%
                                if(product.ProductBorderColor[columnNamesBorder[columnName]]
                                == 1){ %>
                                <span
                                    class="circles"
                                    style="
                                        --bg: <%=columnNamesBorder[columnName]%>;
                                    "
                                ></span>
                                <% }} %>
                            </div>
                            <div class="d-flex pt-3 text-shadow">
                                <p class="text-muted">Gender:</p>
                                <p class="strong px-2">
                                    <%= product.gender === "M" ? "Masculino" :
                                    product.gender === "F" ? "Femenino" :
                                    "Unisex"%>
                                </p>
                            </div>
                            <p class="text-shadow description">
                                <%=product.description %>
                            </p>
                            <div class="text-shadow">
                                <button
                                    type="button"
                                    class="btn btn-primary w-100"
                                >
                                    <span class="button-text">ADD TO CART</span>
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-secondary w-100 mt-2"
                                >
                                    <span class="button-text"
                                        >ADD TO WISHLIST
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <section class="bg-secondary">
                <div
                    id="carouselExampleIndicators"
                    class="w-100 carousel slide align-center"
                    data-bs-ride="carousel"
                >
                    <div class="carousel-indicators">
                        <button
                            type="button"
                            data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="0"
                            class="active "
                            aria-current="true"
                            aria-label="Slide 1"
                        ></button>
                        <button
                            type="button"
                            data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="1"
                            aria-label="Slide 2"
                        ></button>
                        <button
                            type="button"
                            data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="2"
                            aria-label="Slide 3"
                        ></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img
                                src="<%= product.imageProducts.image1 %>"
                                class="d-block w-100"
                                alt="..."
                            />
                        </div>
                        <div class="carousel-item">
                            <img
                                src="<%= product.imageProducts.image1 %>"
                                class="d-block w-100"
                                alt="..."
                            />
                        </div>
                        <div class="carousel-item">
                            <img
                                src="<%= product.imageProducts.image1 %>"
                                class="d-block w-100"
                                alt="..."
                            />
                        </div>
                    </div>
                    <button
                        class="carousel-control-prev"
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev"
                    >
                        <span
                            class="carousel-control-prev-icon"
                            aria-hidden="true"
                        ></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button
                        class="carousel-control-next"
                        type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next"
                    >
                        <span
                            class="carousel-control-next-icon"
                            aria-hidden="true"
                        ></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>
        </main>
        <%- include("./partials/footer") %>
    </body>
</html>
